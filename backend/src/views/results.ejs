<!DOCTYPE html>
<html lang="es">
<head>
    <title>Resultados Recientes</title>

    <link rel="stylesheet" href="/css/results.css">

    <style>
        h2 {
            color: #b066ff;
            margin-top: 40px;
            text-align: center;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background: #1a001f;
            color: #fff;
            border-radius: 12px;
            overflow: hidden;
        }

        th {
            background: #8a2be2;
            padding: 12px;
            text-align: center;
        }

        td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #391452;
        }

        tr:hover {
            background: #2a0030;
        }

        .team {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .team img {
            height: 22px;
        }
    </style>
</head>

<body>

<h1 class="text-center mt-5 fw-bold" style="color:#b066ff;">Resultados Recientes</h1>

<p class="text-center" style="color:#ddd;">Partidos del d√≠a anterior (5 ligas principales)</p>

<% 
const leagueNames = {
    39: "Premier League",
    140: "La Liga",
    135: "Serie A",
    2: "Champions League",
    3: "Europa League"
};
%>

<% for (const leagueId in results) { %>

    <h2><%= leagueNames[leagueId] %></h2>

    <% if (results[leagueId].length === 0) { %>
        <p class="text-center" style="color:#bbb;">No hubo partidos ayer en esta liga.</p>
    <% } else { %>

        <table>
            <thead>
                <tr>
                    <th>Local</th>
                    <th>Resultado</th>
                    <th>Visitante</th>
                </tr>
            </thead>

            <tbody>
                <% results[leagueId].forEach(match => { %>
                    <tr>
                        <td>
                            <div class="team">
                                <img src="<%= match.teams.home.logo %>">
                                <span><%= match.teams.home.name %></span>
                            </div>
                        </td>

                        <td>
                            <%= match.goals.home %> - <%= match.goals.away %>
                        </td>

                        <td>
                            <div class="team">
                                <span><%= match.teams.away.name %></span>
                                <img src="<%= match.teams.away.logo %>">
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    <% } %>

<% } %>

</body>
</html>
